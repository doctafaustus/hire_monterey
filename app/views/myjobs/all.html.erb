<% title "My Jobs" %>

<% if current_user %>
   <div id="indexwrap">


      <div id="myjobswrap">
            <strong style="font-family: Arial; font-size: 13px">User: </strong>
            <span style="font-family: Arial; font-size: 13px"><%= current_user.email %></span>
         
         <div id="buttonstyle">
            <a href="/jobs/new" class="newjobbutton">Post New Job</a>
         </div>
            <br><br>
      </div>


            <div class="mytable">
               <table>
               <caption style="caption-side: top; margin-bottom: 4px; font-weight: bold; font-size: 15px">My Job Listings</caption>
               <tr>
               <th>Position</th>
               <th>Company</th>
               <th>Date Created</th>
               <th>Options</th>
               </tr>
            <% current_user.jobs.each do |job| %>

               <% if job.created_at < Time.now - 60.days %>
                  <tr>
                     <td style="background-color: #e2dfe9"><%= link_to job.position, job_path(job) %> (Expired) </td>
                     <td style="background-color: #e2dfe9"><%= job.company %></td>
                      <!--<td><%= job.created_at.strftime("%b %d, %Y") %></td>-->
                     <td style="background-color: #e2dfe9"><%= job.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b %d, %Y") %></td>
                     <td style="background-color: #e2dfe9">
                     <%= link_to "Delete", job_path(job), method: :delete, data: { confirm: 'Deleting a job ends your transaction with Hire Monterey and permanently removes your listing from the database. Are you sure you want to delete this job?'} %></td>
                     </tr>
               <% else %>
                  <tr>
                     <td><%= link_to job.position, job_path(job) %></td>
                     <td><%= job.company %></td>
                      <!--<td><%= job.created_at.strftime("%b %d, %Y") %></td>-->
                     <td><%= job.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%b %d, %Y") %></td>
                     <td><%= link_to "Edit", edit_job_path(job) %>&nbsp;&nbsp;|&nbsp;
                     <%= link_to "Delete", job_path(job), method: :delete, data: { confirm: 'Deleting a job ends your transaction with Hire Monterey and permanently removes your listing from the database. Are you sure you want to delete this job?'} %></td>
                     </tr>
               <% end %>
            <% end %>
            </table>
            <% if current_user.jobs.empty? %>
               <div style="text-align: center; font-family: Arial; border: solid 1px #ccc; font-size: 13px"><%= "No jobs listed." %>
            <% end %>
         </div>
      </div>
   </br></br>
<% end %>

