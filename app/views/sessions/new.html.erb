<% title "Log In" %>

</br></br>
<div id="indexwrap">
  <div class="login">
      <div id="loginbox">
      <h2 style="color: #E98331">Log In</h2>

		<%= form_tag sessions_path do %>

		  <p>
		    <div id="loginlabel"><%= label_tag :email, "Email" %>:<br /></div>
		    <%= text_field_tag :email, params[:email]  %>
		  </p>
		  <p>
		    <div id="loginlabel"><%= label_tag :password %>:<br /></div>
		    <%= password_field_tag :password %>
		  </p>

		  <p class="button"><%= submit_tag "Log in" %></p>

		  <div id="register">First time posting? <%= link_to "Register Here", new_user_path %></div>
		<% end %>
	</div>
</div>
